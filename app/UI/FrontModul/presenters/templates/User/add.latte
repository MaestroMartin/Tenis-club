/* Hlavní kontejner - centrování vedle sidebaru */
.form-container {
    display: center;
    justify-content: center;
    align-items: center;
    height: 150vh; /* Celková výška */
    margin-right: 600; /* Posun kvůli sidebaru */
}

/* Styl formuláře */
form {
    width: 400px;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}


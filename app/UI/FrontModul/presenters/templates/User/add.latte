    border-radius: 5px;
    font-size: 16px;
}

/* Labely */
label {
    display: block;
    font-weight: bold;
    margin-top: 5px;
}

/* Tlačítko */
.btn-success {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #28a745;
    color: white;
    font-size: 16px;
    border: none;
    border-radius: 5px;
